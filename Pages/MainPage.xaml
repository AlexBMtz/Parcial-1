<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppointmentSimulator.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="15">

            <CollectionView x:Name="AppointmentsCollectionView"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="5">
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding AppointmentDate, StringFormat='{dd/MM/yyyy}'}" />
                            <HorizontalStackLayout>
                                <Label Text="{Binding StartingTime, StringFormat='{HH:mm}'}" />
                                <Label> - </Label>
                                <Label Text="{Binding EndingTime, StringFormat='{HH:mm}'}" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <HorizontalStackLayout VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   Spacing="10">
                <Button Text="Agregar Cita"/>
                <Button Text="Eliminar Cita Seleccionada" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
